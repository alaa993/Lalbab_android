<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lalbab.app.verifyPhone_register">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_5"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:src="@drawable/ic_logo_2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:shadowColor="#050505"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/tv_reg"
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/tv_reg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_reg_name_hint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:id="@+id/lay_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.santalu.maskedittext.MaskEditText
                        android:id="@+id/txt_code3"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:drawablePadding="10dp"
                        android:gravity="fill"
                        android:hint="@string/code_verify"
                        android:inputType="number"
                        android:layoutDirection="ltr"

                        android:paddingLeft="15dp"
                        android:textDirection="ltr"
                        android:visibility="visible"
                        app:met_mask="## ## ##" />


                </LinearLayout>

                <Button
                    android:id="@+id/bt_code3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/xml_button"
                    android:text="@string/virify_code"
                    android:textColor="#fff"
                    tools:visibility="visible" />
                <Button
                    android:id="@+id/bt_code0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@android:color/transparent"
                    android:text="@string/send_codeagin"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#0040ff"
                    android:textColorLink="@color/bg"
                    android:textStyle="bold|italic" />

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/tv_reg_note"
                    android:textSize="14sp" />-->

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Society/Flat(Optional)"
                    android:textSize="14dp"
                    android:id="@+id/textView4" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Society..."
                    android:background="@drawable/xml_textbox_bg"
                    android:id="@+id/txtSocity"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@mipmap/ic_next"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"/>-->

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/message_regester"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="07503886300 - 07503888300"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

